<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_style"
    tools:context=".NotWorking_Screen"
    android:padding="30dp">


    <LinearLayout
        android:id="@+id/outter_layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:minHeight="200dp"
        android:minWidth="300dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_wrap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/linear_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="10">

                <TextView
                    android:id="@+id/nw_deviceIDText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Device ID:"
                    android:textColor="@color/snowText"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/nw_deviceTypeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Device Type:"
                    android:textColor="@color/snowText"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/nw_simNumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Sim Number:"
                    android:textColor="@color/snowText"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical"
                android:layout_weight="90">

                <TextView
                    android:id="@+id/nw_deviceIDValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="TEST"
                    android:textColor="@color/snowText"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/nw_deviceTypeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="TEST"
                    android:textColor="@color/snowText"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/nw_simNumValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="TEST"
                    android:textColor="@color/snowText"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/bot_buttons_style"
            android:text="Close"
            android:textColor="@color/snowText" />

    </LinearLayout>

</RelativeLayout>